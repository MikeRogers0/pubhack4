{
  "name": "90s Netflix",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Bring back the good old days for netflix",
  "background": {
    "scripts": ["js/background.js"]
  },
  "homepage_url": "http://www.pubhack.co.uk/",
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "permissions": [
    "tabs", "*://*.netflix.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["js/netflix.js"]
    }
  ],
  "browser_action": {
    "default_title": "Go 90s",
    "default_icon": "imgs/icon.png"
  },
  "icons": {
  	"16": "imgs/icon.png",
    "48": "imgs/icon.png",
    "128": "imgs/icon.png"
  },
  "minimum_chrome_version": "18",
  "offline_enabled": true
}
